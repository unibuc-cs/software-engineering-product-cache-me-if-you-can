<section class="p-3">
    <h1 class="gray-dark" style="">My Submissions:</h1>
    <br />

    <div class="container">
        <ul class="list-group">
            @if (ViewBag.Solutions != null && ViewBag.Solutions.Count > 0)
            {
                @foreach (var solution in ViewBag.Solutions)
                {
                    <li class="list-group-item">
                        <div class="card">
                            <div class="card-header">
                                <a asp-action="Show" asp-controller="LockedSolutions" asp-route-id="@solution.Id" style="text-decoration: none; outline: none;">
                                    <h3 style="color:black;">Exercise: @solution.LockedExercise.Title</h3>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Score: @solution.Score %</h5>
                                <div style="display:flex; justify-content: space-between;">
                                    <a asp-action="Show" asp-controller="LockedSolutions" asp-route-id="@solution.Id">
                                        <svg style="width:20px; height:20px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#FF0000" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 3.75H6A2.25 2.25 0 0 0 3.75 6v1.5M16.5 3.75H18A2.25 2.25 0 0 1 20.25 6v1.5m0 9V18A2.25 2.25 0 0 1 18 20.25h-1.5m-9 0H6A2.25 2.25 0 0 1 3.75 18v-1.5M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                        </svg>
                                    </a>
                                    <form method="post" asp-action="Delete" asp-controller="LockedSolutions" asp-route-id="@solution.Id">
                                        <button type="submit" class="btn btn-no-outline">
                                            <svg style="width:20px; height:20px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#FF0000">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            }
            else
            {
                <h2 class="text-danger">You have no submissions :(</h2>
            }

        </ul>
    </div>


</section>